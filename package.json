{
  "name": "phienbanhoanchinh226",
  "private": true,
  "version": "1.0.0",
  "description": "AI Story Writing Tool - Công cụ viết truyện AI",
  "author": "Your Name",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@google/genai": "^0.11.0",
    "antd": "^5.26.3",
    "axios": "^1.10.0",
    "buffer": "^6.0.3",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^18.3.23",
    "autoprefixer": "^10.4.19",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "madge": "^8.0.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.7.2",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.yourcompany.phienbanhoanchinh226",
    "productName": "AI Story Writing Tool",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "dist"
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
